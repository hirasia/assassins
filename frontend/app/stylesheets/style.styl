@require "helpers"

mobile-width = 600px
text-color = rgb(137, 8, 4)
background-color = rgb(188, 188, 188)
text-font = Lucida Sans Unicode, Lucida Grande, sans-serif
button-background-color = #ddd

*
    box-sizing border-box
head
    background-color background-color
html, body
    height 100%
    margin 0
    padding 0
    color text-color
    background-color background-color
    font-family text-font

.quiet-link, .quiet-link:visited, .quiet-link:active
    color text-color
    text-decoration none
.right
    text-align right
.left
    text-align left
.center
    text-align center

h1
    margin-bottom 2rem

#navbar
    background-color #ddd
.navbar-item-wrap
    margin 0 auto
    max-width 1080px
.navbar-item
    -webkit-transition-duration 0.2s
    transition-duration 0.2s
    display block
    padding 1rem
    text-align center
.navbar-item:hover
    cursor pointer
    background-color text-color
    color #ddd
@media only screen and (min-width: mobile-width)
    .navbar-item
        display inline-block

.form
    width 90%
    max-width 600px
    margin 0 auto
.form-title
    width 100%
    margin 0
    padding 1rem
    text-align center
.form-input
    display block
    width 100%
    margin-bottom 10px
    padding 5px
    border-radius 5px
    border default-border
    font-size 18px
    line-height 2rem

.half
    display block
    width 100%
@media only screen and (min-width: mobile-width)
    .half
        display inline-block
        width 50%

.hidden
    display none

.button
    -webkit-transition-duration 0.2s
    transition-duration 0.2s
    background-color button-color
    color text-color

.button:hover
    background-color text-color
    color #ddd
    cursor pointer

.error-message
    visibility hidden
    color red
    font-weight bold
    text-align left
    padding 1rem 0
.modal
    display none
    position fixed
    left 0
    top 0
    z-index 100
    width 100%
    height 100%
    overflow auto
    background-color #000
    background-color rgba(0, 0, 0, .5)
.modal-content
    max-width 30%
    margin 10% auto
    padding 2rem
    border default-border
    background-color white
    border-radius 5px
    text-align center

#home-page-buttons
    flexbox()
    flex-direction column
    flex-wrap wrap
    justify-content space-around

.home-page-button
    margin 10px 30%
    width auto
    min-width 10%
    padding 20px
    border-radius 10px
    font-size 20px

#login-buttons
    flexbox()
    flex-direction column
    flex-wrap wrap
    justify-content space-around

.login-button
    margin 10px 10px
    width auto
    min-width 10%
    padding 20px
    border-radius 10px
    font-size 20px

#js-error-message
    font-weight bold
    color red
