extends template

block content
    form#js-login-form.form
        h1.form-title Join a New Game
        #js-error-message
        input.form-input(type='text' name='gameCode' placeholder='Game Code' onFocus='clearError(this)' )
        input.form-input.half(type='text' name='firstName' placeholder='First Name' onFocus='clearError(this)')
        input.form-input.half(type='text' name='lastName' placeholder='Last Name' onFocus='clearError(this)')
        input.form-input(type='text' name='email' placeholder='Email' onFocus='clearError(this)' onBlur='validateEmail(this)')
        input.form-input(type='password' name='password' placeholder='Password' onFocus='clearError(this)')
        button.form-input.button(type='button' onclick='joinGame()') Join Game

block postscript
    script submitOnEnterKey(joinGame);
